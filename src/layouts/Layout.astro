---
import "@/index.css";

interface Props {
	title: string;
	lang?: "es" | "en";
}

const { title, lang = "es" } = Astro.props;
const base = import.meta.env.BASE_URL === "/" ? "/" : `${import.meta.env.BASE_URL}/`;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="apple-touch-icon" sizes="180x180" href={`${base}apple-touch-icon.png`} />
		<link rel="icon" type="image/png" sizes="32x32" href={`${base}favicon-32x32.png`} />
		<link rel="icon" type="image/png" sizes="16x16" href={`${base}favicon-16x16.png`} />
		<link rel="manifest" href={`${base}site.webmanifest`} />
		<link rel="icon" type="image/x-icon" href={`${base}favicon.ico`} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={lang === "es" 
			? "Libro 'Un Andrés Más': 11.000 km de aventura por Sudamérica. Aprovecha el precio de lanzamiento y recibe tu ejemplar dedicado. ¡Cantidades limitadas!" 
			: "Book 'Un Andrés Más': 11,000 km adventure through South America. Get your signed copy at a special launch price. Limited quantities!"} />
		<meta property="og:title" content={lang === "es" ? "Un Andrés Más: Preventa Oficial del Libro" : "Un Andrés Más: Official Book Pre-sale"} />
		<meta property="og:description" content={lang === "es" 
			? "Acompáñame en esta aventura de Colombia a la Patagonia. Reserva tu copia firmada y con descuento exclusivo aquí."
			: "Join me on this adventure from Colombia to Patagonia. Reserve your signed copy with an exclusive discount here."} />
		<meta property="og:image" content="https://bit.ly/URL_DE_TU_IMAGEN_DE_PORTADA.jpg" />
		<meta property="og:url" content="https://bit.ly/LibroAndresMas" />
		<meta property="og:type" content="book" />   
		<meta property="og:locale" content={lang === "es" ? "es_CO" : "en_US"} />
	</head>
	<body>
		<script define:vars={{ lang }}>
			window.__ASTRO_LANG__ = lang;
		</script>
		<slot />
	</body>
</html>
